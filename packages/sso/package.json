{
  "name": "@better-auth/sso",
  "version": "1.0.0",
  "description": "SSO authentication plugin for Better Auth",
  "main": "dist/index.cjs",
  "license": "MIT",
  "keywords": [
    "sso",
    "auth",
    "better-auth",
    "sso",
    "oidc",
    "saml",
    "oauth2"
  ],
  "scripts": {
    "test": "vitest",
    "build": "unbuild",
    "dev": "unbuild --watch"
  },
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.cjs"
    },
    "./saml": {
      "types": "./dist/saml/index.d.ts",
      "import": "./dist/saml/index.mjs",
      "require": "./dist/saml/index.cjs"
    },
    "./saml/client": {
      "types": "./dist/saml/client.d.ts",
      "import": "./dist/saml/client.mjs",
      "require": "./dist/saml/client.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ],
      "client": [
        "./dist/client.d.ts"
      ],
      "saml": [
        "./dist/saml/index.d.ts"
      ],
      "saml/client": [
        "./dist/saml/client.d.ts"
      ]
    }
  },
  "dependencies": {
    "samlify": "^2.9.0",
    "zod": "^3.24.1",
    "oauth2-mock-server": "^7.2.0"
  },
  "devDependencies": {
    "better-auth": "workspace:^",
    "@authenio/samlify-xsd-schema-validator": "^1.0.5",
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "vitest": "^1.6.0"
  }
}